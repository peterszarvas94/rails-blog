<%= form_with model: [ post, Comment.new ], class: "mt-6" do |form| %>
  <label class="block text-sm font-medium text-gray-700 mb-2">Your comment:</label>
  <%= form.text_area :content, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" %>
  <div class="mt-3">
    <%= form.submit "Post Comment", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-200 cursor-pointer" %>
  </div>
<% end %>
