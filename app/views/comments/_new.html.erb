<%= form_with model: [ post, Comment.new ], class: "mt-6" do |form| %>
  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Your comment:</label>
  <%= form.text_area :content, rows: 4, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 resize-none" %>
  <div class="mt-3">
    <%= form.submit "Post Comment", class: "bg-blue-500 dark:bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-600 dark:hover:bg-blue-700 transition duration-200 cursor-pointer" %>
  </div>
<% end %>
