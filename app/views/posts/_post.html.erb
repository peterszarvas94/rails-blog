<div id="<%= dom_id post %>" class="space-y-4">
  <div>
    <h2 class="text-xl font-semibold text-gray-800">
      <%= post.title %>
    </h2>
  </div>
  <div class="text-gray-600">
    <%= post.body %>
  </div>
  <div class="text-sm text-gray-500">
    <span class="font-medium">Updated at:</span>
    <%# https://www.npmjs.com/package/local-time %>
    <%# https://strftime.org/ %>
    <%= time_tag post.updated_at, "data-local": "time", "data-format": "%B %e, %Y %l:%M:%P", class: "ml-1" %>
  </div>
</div>
