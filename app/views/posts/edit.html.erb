<% content_for :title, "Editing post" %>
<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-200">Editing post</h1>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <%= render "form", post: @post %>
  </div>
  <div class="mt-6 space-x-2">
    <%= link_to "Show this post", @post, class: "text-blue-500 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" %>
    <span class="text-gray-400 dark:text-gray-500">|</span>
    <%= link_to "Back to posts", posts_path, class: "text-blue-500 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" %>
  </div>
</div>
