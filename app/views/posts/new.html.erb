  <h1 class="text-3xl font-bold mb-6 text-gray-800">New post</h1>
  <div class="bg-white rounded-lg shadow-md p-6">
    <%= render "form", post: @post %>
  </div>
  <div class="mt-6">
    <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>
