<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <%= tag.div(flash[:alert], class: "mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded") if flash[:alert] %>
  <%= tag.div(flash[:notice], class: "mb-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded") if flash[:notice] %>
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Sign In</h1>
  <%= form_with url: session_path, class: "space-y-4" do |form| %>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= form.submit "Sign in", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-200 cursor-pointer" %>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "Forgot password?", new_password_path, class: "text-blue-500 hover:text-blue-700 text-sm" %>
  </div>
</div>
